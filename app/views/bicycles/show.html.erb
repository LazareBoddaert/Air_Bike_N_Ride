<div class="container">
  <div class='show-bc row'>
    <div class="col-6 card_bicycle">
      <h1><%= @bicycle.title %></h1>
      <% if @bicycle.photo.attached? %>
        <i class='photos'><%= cl_image_tag @bicycle.photo.key, height: 400, crop: :fill %></i>
      <% end %>
      <p>Category : <%= @bicycle.category %></p>
      <p>Size : <%= @bicycle.size %>cm</p>
      <p>Price : <%= @bicycle.price_per_day %> â‚¬/day</p>
      <p>Rating : <%= @bicycle.total_rating %> /5.0</p>
      <p>Description : <%= @bicycle.description %></p>
      <div class="booking-total col-6">
        <%= render "bookings/form" %>
      </div>
    </div>
  </div>
  <% if @bicycle.user_id == current_user.id %>
    <div><%= button_to "Delete this bicycle!", @bicycle, method: :delete,
    form: {data: {turbo_confirm: 'Are you sure?'}}, class: 'book btn btn-danger' %></div>
  <% end %>
</div>
<div class='contain m-5'>
  <div class='comment m-2'>
    <% @bicycle.bookings.each do |book| %>
      <% book.reviews.each do |review| %>
        <p><%= review.content %> : <%= review.rating %>/5</p>
      <% end %>
    <% end %>
  </div>
  <div class='for'>
    <% if @bookings.empty? %>
    <% else  %>
      <%= simple_form_for [@bookings.first, @review], html: { class: "border border-dark"} do |f| %>
        <%= f.input :content %>
        <%= f.input :rating %>
        <%= f.submit "Submit review", class: "btn btn-primary" %>
      <% end %>
    <% end %>
  </div>
</div>
